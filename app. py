# Lista de productos (vacÃ­a al inicio)
productos = []

def aÃ±adir_producto(nombre, cantidad=1):
    producto = {
        "nombre": nombre,
        "cantidad": cantidad
    }
    productos.append(producto)
    print(f"âœ… Producto aÃ±adido: {nombre} (x{cantidad})")

def mostrar_lista():
    if not productos:
        print("ğŸ›’ Tu lista estÃ¡ vacÃ­a")
    else:
        print("ğŸ›’ Lista de productos:")
        for i, p in enumerate(productos, start=1):
            print(f"{i}. {p['nombre']} (x{p['cantidad']})")

# Ejemplo de uso
aÃ±adir_producto("Leche", 2)
aÃ±adir_producto("Pan", 1)
aÃ±adir_producto("Huevos", 12)
